@using DataEntity;
@model IEnumerable<PatientEntity>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
    <div class="container">
        <div class="row">
            <h2>All</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Create" asp-controller="Patients" class="btn btn-info" title="Create">Create</a>
        </div>
    </div>
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-12">
                <table id="tblPatient" name="tblPatient" class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Age</th>
                      @*      <th>Gender</th> *@
                            <th>Address</th>
                            <th>Contact</th>
                            <th>Edit</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.PatientID</td>
                                <td> @item.PatientName</td>
                                <td> @item.Age</td>
                           @*      <td> @item.Gender</td> *@
                                <td> @item.Address</td>
                           @*    <td> @item.Contact</td>  *@
                                
                                <td> @Html.ActionLink("Edit", "Edit", new { Controller = "Patients", PatientID = item.PatientID })</td>
                                <td> @Html.ActionLink("Details", "Details", new { Controller = "Patients", PatientID = item.PatientID })</td>

                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <a href="javascript:void(0);" id="scroll" title="Click to return on the top page" style="display:none;">Top<span></span></a>
    </div>

</body>
</html>