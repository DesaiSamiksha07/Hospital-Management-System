@using DataEntity; 
@model IEnumerable<DoctorEntity>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
    <div class="container">
        <div class="row">
            <h2>All</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
        <a asp-action="Create" asp-controller="Doctors" class="btn btn-info" title="Create">Create</a>
        </div>
    </div>
   <br />
   <div class="container-fluid">
       <div class="row">
           <div class="col-lg-12 col-12">
            <table id="tblDoctor" name="tblDoctor" class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Specialization</th>
                        <th>Contact</th>
                        <th>Edit</th>
                        <th>Details</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.DoctorID</td>
                            <td> @item.DoctorName</td>
                            <td> @item.DoctorName</td>
                            <td> @item.Contact</td>
                                <td> @Html.ActionLink("Edit", "Edit", new { Controller = "Doctors", DoctorID = item.DoctorID })</td>
                                <td> @Html.ActionLink("Details", "Details", new { Controller = "Doctors", DoctorID = item.DoctorID })</td>
                                <td> @Html.ActionLink("Delete", "Delete", new { Controller = "Doctors", DoctorID = item.DoctorID })</td>
                        </tr>
                    }
                </tbody>
            </table>

           </div>
       </div>
       <a href="javascript:void(0);" id="scroll" title="Click to return on the top page" style="display:none;">Top<span></span></a>
   </div>

</body>
</html>